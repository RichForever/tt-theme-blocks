{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "tt-theme-blocks/image-and-text",
	"version": "0.1.0",
	"title": "Image and Text Block",
	"category": "tt-theme-blocks-category",
	"description": "Display custom section tag with various options",
	"example": {},
	"attributes": {
		"customBlockId": {
			"type": "string",
			"default": ""
		},
		"customBackground": {
			"type": "string",
			"default": ""
		},		
		"customFlex": {
			"type": "object",
			"default": {
				"direction": {
					"xs": "-",
					"sm": "-",
					"md": "-",
					"lg": "-",
					"xl": "-",
					"2xl": "-"
				},
				"gap": {
					"xs": "-",
					"sm": "-",
					"md": "-",
					"lg": "-",
					"xl": "-",
					"2xl": "-"
				}
			}
		},	
		"customPadding": {
			"type": "object",
			"default": {
				"horizontal": {
					"xs": "-",
					"sm": "-",
					"md": "-",
					"lg": "-",
					"xl": "-",
					"2xl": "-"
				},
				"vertical": {
					"xs": "-",
					"sm": "-",
					"md": "-",
					"lg": "-",
					"xl": "-",
					"2xl": "-"
				}	
			}
		},	
		"customSpacing": {
			"type": "object",
			"default": {
				"horizontal": {
					"xs": "-",
					"sm": "-",
					"md": "-",
					"lg": "-",
					"xl": "-",
					"2xl": "-"
				},
				"vertical": {
					"xs": "-",
					"sm": "-",
					"md": "-",
					"lg": "-",
					"xl": "-",
					"2xl": "-"
				}	
			}
		},						
		"customHtmlTag": {
			"type": "string",
			"default": "section"
		},
		"customImage": {
			"type": "object",
			"default": {}
		},
		"customCss": {
			"type": "string",
			"default": ""
		}		
	},
	"textdomain": "tt-theme-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
