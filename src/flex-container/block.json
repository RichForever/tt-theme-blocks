{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "tt-theme-blocks/flex-container",
	"version": "0.1.0",
	"title": "Flex Container Block",
	"category": "tt-theme-blocks-category",
	"description": "Display custom section tag with various options",
	"example": {},
	"attributes": {
		"customBlockId": {
			"type": "string",
			"default": ""
		},
		"customBackground": {
			"type": "string",
			"default": ""
		},		
		"customFlex": {
			"type": "object",
			"default": {
				"direction": {
					"xs": "-",
					"sm": "-",
					"md": "-",
					"lg": "-",
					"xl": "-",
					"2xl": "-"
				},
				"gap": {
					"xs": "-",
					"sm": "-",
					"md": "-",
					"lg": "-",
					"xl": "-",
					"2xl": "-"
				}
			}
		},		
		"customPadding": {
			"type": "object",
			"default": {
				"default": {
					"top": "-",
					"right": "-",
					"bottom": "-",
					"left": "-"
				},
				"xs": {
					"top": "-",
					"right": "-",
					"bottom": "-",
					"left": "-"
				},
				"sm": {
					"top": "-",
					"right": "-",
					"bottom": "-",
					"left": "-"
				},
				"md": {
					"top": "-",
					"right": "-",
					"bottom": "-",
					"left": "-"
				},
				"lg": {
					"top": "-",
					"right": "-",
					"bottom": "-",
					"left": "-"
				},
				"xl": {
					"top": "-",
					"right": "-",
					"bottom": "-",
					"left": "-"
				},
				"2xl": {
					"top": "-",
					"right": "-",
					"bottom": "-",
					"left": "-"
				}
			}
		},							
		"customHtmlTag": {
			"type": "string",
			"default": "section"
		},
		"customCss": {
			"type": "string",
			"default": ""
		}		
	},
	"textdomain": "tt-theme-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
