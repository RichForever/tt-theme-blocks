							"hidden": false
						},
						{
							"type": "docs",
							"section": "ğŸ“ Documentation",
							"hidden": false
						},
						{
							"type": "style",
							"section": "ğŸ’„ Code Style",
							"hidden": false
						},
						{
							"type": "refactor",
							"section": "â™»ï¸ Refactoring",
							"hidden": false
						},
						{
							"type": "perf",
							"section": "âš¡ Performance Improvements",
							"hidden": false
						},
						{
							"type": "test",
							"section": "ğŸ§ª Tests",
							"hidden": false
						},
						{
							"type": "build",
							"section": "ğŸ— Build System",
							"hidden": false
						},
						{
							"type": "ci",
							"section": "ğŸ”§ Continuous Integration",
							"hidden": false
						},
						{
							"type": "chore",
							"section": "ğŸ“¦ Miscellaneous",
							"hidden": false
