{
	"name": "tt-custom-blocks",
	"version": "1.2.0",
	"description": "Example block scaffolded with Create Block tool.",
	"author": "The WordPress Contributors",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"wordpress",
		"theme",
		"blocks",
		"react",
		"gutenberg"
	],
	"homepage": "",
	"repository": {
		"type": "git",
		"url": "https://github.com/RichForever/tt-theme-blocks"
	},
	"bugs": {
		"url": "https://github.com/RichForever/tt-theme-blocks/issues"
	},
	"main": "build/index.js",
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "wp-scripts lint-js",
		"*.{css,scss}": "wp-scripts lint-style --allow-empty-input",
		"package.json": "wp-scripts lint-pkg-json"
	},
	"dependencies": {
		"postcss": "^8.5.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@release-it/conventional-changelog": "^10.0.0",
		"@wordpress/scripts": "^30.10.0",
		"commitizen": "^4.3.1",
		"conventional-changelog-cli": "^5.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.11",
		"release-it": "^18.1.2",
		"tailwindcss": "^3.4.17"
	},
	"scripts": {
		"build": "wp-scripts build --webpack-copy-php",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start --webpack-copy-php",
		"release": "release-it",
		"commit": "cz",
		"prepare": "husky"
	},
	"overrides": {
		"conventional-changelog-conventionalcommits": "8.0.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release ${version}"
		},
		"github": {
			"release": true
		},
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"infile": "CHANGELOG.md",
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": "ğŸš€ Features",
							"hidden": false
						},
						{
